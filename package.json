{
  "name": "esg-nexus-platform",
  "version": "1.0.0",
  "description": "Professional ESG Risk Management Platform - Enterprise-grade sustainability and governance analytics",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "start": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "serve": "vite preview --port 3000",
    "lint": "eslint . --ext js,jsx,ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext js,jsx,ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:ci": "cross-env CI=true vitest --coverage --watchAll=false",
    "clean": "rimraf node_modules dist .eslintcache",
    "reinstall": "npm run clean && npm install",
    "analyze": "npm run build && npx vite-bundle-analyzer dist/assets/*.js",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "chromatic": "npx chromatic --project-token=$CHROMATIC_PROJECT_TOKEN",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "cypress:ci": "start-server-and-test dev http://localhost:5173 cypress:run",
    "lighthouse": "lhci autorun",
    "accessibility": "pa11y http://localhost:5173",
    "deploy": "npm run build && gh-pages -d dist",
    "deploy:netlify": "npm run build && netlify deploy --prod --dir=dist",
    "deploy:vercel": "npm run build && vercel --prod",
    "deploy:aws": "npm run build && aws s3 sync dist/ s3://esg-nexus-platform-prod --delete",
    "deploy:staging": "npm run build && aws s3 sync dist/ s3://esg-platform-staging",
    "deploy:prod": "npm run build && aws s3 sync dist/ s3://esg-platform-prod",
    "predeploy": "npm run build",
    "precommit": "lint-staged",
    "prepare": "husky install",
    "postinstall": "patch-package",
    "validate": "npm run type-check && npm run lint && npm run test:ci",
    "ci": "npm run validate && npm run build",
    "docker:build": "docker build -t esg-nexus-platform .",
    "docker:run": "docker run -p 5173:80 esg-nexus-platform",
    "docker:dev": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "cdk:deploy": "cdk deploy",
    "cdk:destroy": "cdk destroy",
    "terraform:init": "terraform init",
    "terraform:plan": "terraform plan",
    "terraform:apply": "terraform apply",
    "serverless:deploy": "serverless deploy",
    "serverless:remove": "serverless remove"
  },
